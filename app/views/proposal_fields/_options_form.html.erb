<div class="row" data-proposal-form-target="addOption">
  <label for="options">Add Options</label><br>  
  <%= f.fields :options do |field| %>
   <div class="row" data-proposal-form-target="optionRow">
      <div class="form-group col-2">
      <%= f.label :index %>
      <%= field.number_field :index, class:"form-control" %>
    </div>
    <div class="form-group col-5">
      <%= f.label :text %>
      <%= field.text_field :text, class:"form-control" %>
    </div>
    <div class="form-group col-4">
      <%= f.label :value %>
      <%= field.text_field :value, class:"form-control" %>
    </div>
    <div class="align-items-center col-1 d-flex justify-content-center">
      <%= image_tag 'delete.svg', size: '25x25' %>
    </div>
   </div>
  <% end %>
</div>
<span class="btn btn-sm btn-primary mb-2" data-action="click->proposal-form#handleAddOptions">Add option</span>
