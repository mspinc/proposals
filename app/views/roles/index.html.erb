<main class="content" data-controller="proposal-types">
  <div class="container-fluid">
    <div class="header">
      <h1 class="header-title">
        Roles
      </h1>
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"> <%= link_to "Dashboard", dashboards_path %> </li>
          <li class="breadcrumb-item active" aria-current="page"><%= link_to "Roles", roles_path %></li>
        </ol>
      </nav>
    </div>
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <div class="float-end">
              <%= link_to "Add new role", new_role_path, class: 'btn btn-primary' %>
            </div>
          </div>
          <table class="table">
            <thead>
              <tr>
                <th style="width:40%;">Role</th>
                <th>Type</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% @roles.each do |role|%>                    
                <tr>
                  <td><%= role.name&.split('_')&.map(&:capitalize)&.join(' ') %></td>
                  <td>
                    <% if role.system_generated %>
                      <p>System Generated Role</p>
                    <% else %>
                      <p>User Generated Role</p>
                    <% end %>
                  </td>
                  <td class="table-action">
                    <%= link_to '<i class="align-middle fas fa-fw fa-eye" data-toggle="tooltip" title="Show"></i>Show'.html_safe, role_path(role) %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</main>

